<h1>New Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <div class="form-group">
    <%= f.input :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.select :category, CUISINE: Restaurant::CATEGORY %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
